{
  "name": "order-service",
  "version": "0.0.0",
  "description": "Order service",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "lint": "gts lint",
    "prettier": "prettier ./src",
    "prettier:write": "prettier ./src --write",
    "synth": "cdk synth",
    "prerelease": "npm run synth",
    "release": "standard-version --commit-all --no-verify",
    "clean": "gts clean",
    "fix": "gts fix",
    "test": "jest",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit --coverage",
    "test:integration": "NODE_ENV=integration jest",
    "test:integration:ci": "NODE_ENV=integration jest --ci --reporters=default --reporters=jest-junit --passWithNoTests",
    "bootstrap:ci": "cdk bootstrap",
    "diff:ci": "cdk diff",
    "deploy:ci": "cdk deploy --all --require-approval never",
    "destroy:ci": "cdk destroy --all --force"
  },
  "author": "orderFulfillment",
  "license": "UNLICENSED",
  "dependencies": {
    "@aws-lambda-powertools/logger": "^1.18.1",
    "@aws-lambda-powertools/metrics": "^1.18.1",
    "@aws-lambda-powertools/tracer": "^1.18.1",
    "@aws-sdk/client-dynamodb": "3.705.0",
    "@aws-sdk/util-dynamodb": "3.705.0",
    "@middy/core": "^4.7.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "convict": "^6.2.4",
    "uuid": "^11.0.3"
  },
  "engines": {
    "node": "20.x"
  },
  "lint-staged": {
    "*": "prettier --write",
    "*.ts": "eslint"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "chore",
              "release": "patch"
            }
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/aws-lambda": "8.10.147",
    "@types/convict": "^6.1.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@types/uuid": "^10.0.0",
    "aws-cdk-lib": "^2.171.1",
    "aws-lambda": "^1.0.7",
    "constructs": "^10.4.2",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "dotenv": "^16.4.7",
    "esbuild": "0.25.0",
    "gts": "^6.0.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.2.10",
    "newman": "6.2.0",
    "prettier": "^3.4.2",
    "semantic-release": "^24.2.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  }
}
